<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-material"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:text="ðŸ“Š DIAGNOSTICS"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <!-- Live Data Section -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:text="âš¡ LIVE TELEMETRY"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <!-- Battery -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:text="Battery:"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tvDiagBattery"
                        android:text="---%"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"/>
                </LinearLayout>

                <!-- Voltage -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:text="Voltage:"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tvDiagVoltage"
                        android:text="-- V"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"/>
                </LinearLayout>

                <!-- Current -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:text="Current:"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tvDiagCurrent"
                        android:text="-- A"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"/>
                </LinearLayout>

                <!-- Power -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:text="Power:"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tvDiagPower"
                        android:text="-- W"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"/>
                </LinearLayout>

                <!-- Temperature -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:text="Temperature:"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tvDiagTemp"
                        android:text="-- Â°C"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"/>
                </LinearLayout>

                <!-- Speed -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:text="Speed:"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tvDiagSpeed"
                        android:text="-- km/h"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Battery Health -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:text="ðŸ”‹ BATTERY HEALTH"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <!-- Health Percentage -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:text="Health:"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tvBatteryHealth"
                        android:text="95%"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:textColor="#00AA00"/>
                </LinearLayout>

                <!-- Charge Cycles -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:text="Charge Cycles:"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tvChargeCycles"
                        android:text="47"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"/>
                </LinearLayout>

                <!-- Cell Voltage -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:text="Cell Voltage:"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tvCellVoltage"
                        android:text="3.7V avg"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"/>
                </LinearLayout>

                <!-- Capacity -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:text="Capacity:"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tvBatteryCapacity"
                        android:text="14.5 Ah"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- System Info -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:text="âš™ï¸ SYSTEM INFO"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:text="Firmware:"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tvFirmwareVersion"
                        android:text="v2.4.1"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:text="Model:"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tvModel"
                        android:text="Augment Eco"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:text="Error Code:"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tvErrorCode"
                        android:text="None"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:textColor="#00AA00"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:text="Odometer:"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tvOdometer"
                        android:text="1,247 km"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Chart Placeholder -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:text="ðŸ“ˆ BATTERY VOLTAGE CHART"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chartVoltage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Refresh Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnRefreshDiag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ”„ REFRESH DATA"
            app:cornerRadius="8dp"/>

    </LinearLayout>

</ScrollView>
