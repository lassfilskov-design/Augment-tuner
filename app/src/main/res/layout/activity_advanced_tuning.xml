<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-material"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:text="âš¡ ADVANCED TUNING"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:text="âš ï¸ WARNING: Modifications may void warranty and are illegal in some regions!"
            android:textSize="12sp"
            android:textColor="#FF6B00"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <!-- Preset Selection -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:text="ðŸŽ¯ QUICK PRESETS"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupPresets"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipEco"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸŒ± ECO"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="âš–ï¸ NORMAL"
                        android:checked="true"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipSport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸƒ SPORT"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipTurbo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ðŸš€ TURBO"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>
                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Speed Control -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:text="ðŸ SPEED SETTINGS"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <!-- Max Speed -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:text="Max Speed:"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tvMaxSpeedValue"
                        android:text="25 km/h"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"/>
                </LinearLayout>

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderMaxSpeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="10"
                    android:valueTo="50"
                    android:value="25"
                    android:stepSize="1"
                    android:layout_marginBottom="16dp"/>

                <!-- Speed Limit Toggle -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:text="Enable Speed Limit"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchSpeedLimit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"/>
                </LinearLayout>

                <!-- Cruise Control -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:text="Cruise Control"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchCruiseControl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Power Control -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:text="âš¡ POWER SETTINGS"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <!-- Power Mode -->
                <TextView
                    android:text="Power Mode:"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupPowerMode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPowerEco"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ECO"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPowerNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NORMAL"
                        android:checked="true"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPowerSport"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SPORT"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipPowerCustom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CUSTOM"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>
                </com.google.android.material.chip.ChipGroup>

                <!-- Throttle Response -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:text="Throttle Response:"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tvThrottleValue"
                        android:text="50%"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"/>
                </LinearLayout>

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderThrottle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="0"
                    android:valueTo="100"
                    android:value="50"
                    android:stepSize="5"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Acceleration Control -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:text="ðŸš€ ACCELERATION"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:text="Acceleration Mode:"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupAcceleration"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipAccelSoft"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="SOFT"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipAccelNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NORMAL"
                        android:checked="true"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipAccelAggressive"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="AGGRESSIVE"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>
                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Battery & Safety -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:text="ðŸ”‹ BATTERY & SAFETY"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <!-- Low Battery Warning -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:text="Low Battery Warning:"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tvLowBatteryValue"
                        android:text="20%"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"/>
                </LinearLayout>

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderLowBattery"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="10"
                    android:valueTo="40"
                    android:value="20"
                    android:stepSize="5"
                    android:layout_marginBottom="16dp"/>

                <!-- Auto Lock -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:text="Auto Lock"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"/>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchAutoLock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"/>
                </LinearLayout>

                <!-- Auto Lock Delay -->
                <LinearLayout
                    android:id="@+id/layoutAutoLockDelay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp">

                    <TextView
                        android:text="Auto Lock Delay:"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tvAutoLockValue"
                        android:text="30s"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"/>
                </LinearLayout>

                <com.google.android.material.slider.Slider
                    android:id="@+id/sliderAutoLock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:valueFrom="10"
                    android:valueTo="120"
                    android:value="30"
                    android:stepSize="10"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnResetDefaults"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                android:text="RESET"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:cornerRadius="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnApplySettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="APPLY TO SCOOTER"
                app:cornerRadius="8dp"/>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
