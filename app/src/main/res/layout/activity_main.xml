<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="AUGMENT TUNER"
            android:textSize="28sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#000000"
            android:paddingBottom="4dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ”’ Ingen telemetry â€¢ Ingen tracking"
            android:textSize="12sp"
            android:gravity="center"
            android:textColor="#666666"
            android:paddingBottom="24dp"/>

        <!-- MAC Address Input -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Scooter MAC Address"
            android:textStyle="bold"
            android:textColor="#000000"
            android:paddingBottom="4dp"/>

        <EditText
            android:id="@+id/etMacAddress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="XX:XX:XX:XX:XX:XX"
            android:inputType="text"
            android:textAllCaps="true"
            android:fontFamily="monospace"
            android:padding="12dp"
            android:background="#F5F5F5"
            android:layout_marginBottom="8dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸ’¡ Find MAC med nRF Connect app"
            android:textSize="10sp"
            android:textColor="#666666"
            android:paddingBottom="16dp"/>

        <!-- Connect button -->
        <Button
            android:id="@+id/btnConnect"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="CONNECT TIL SCOOTER"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tvStatus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Status: Ikke forbundet"
            android:padding="8dp"
            android:gravity="center"
            android:textColor="#666666"
            android:textStyle="italic"/>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"/>

        <!-- Speed control -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âš¡ Hastighed"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:paddingBottom="8dp"/>

        <TextView
            android:id="@+id/tvSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="38 km/h"
            android:textSize="32sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#FF6600"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"/>

        <SeekBar
            android:id="@+id/seekSpeed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="60"
            android:min="20"
            android:progress="38"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="20 km/h"
                android:textSize="10sp"
                android:textColor="#666666"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="60 km/h"
                android:textSize="10sp"
                android:gravity="end"
                android:textColor="#666666"/>

        </LinearLayout>

        <!-- Features -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ðŸŽ›ï¸ Features"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#000000"
            android:paddingBottom="8dp"/>

        <CheckBox
            android:id="@+id/cbZeroStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Zero Start (kick-less)"
            android:textSize="14sp"
            android:padding="8dp"/>

        <CheckBox
            android:id="@+id/cbSportPlus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sport+ Mode"
            android:textSize="14sp"
            android:padding="8dp"/>

        <CheckBox
            android:id="@+id/cbTurbo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Electronic Turbo"
            android:textSize="14sp"
            android:padding="8dp"
            android:layout_marginBottom="24dp"/>

        <!-- Apply button -->
        <Button
            android:id="@+id/btnApply"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="ðŸš€ SEND TIL SCOOTER"
            android:textStyle="bold"
            android:textSize="18sp"
            android:enabled="false"/>

        <!-- Warning -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="âš ï¸ Test kun i sikkert miljÃ¸\nOvervÃ¥g motor temperatur"
            android:textSize="11sp"
            android:gravity="center"
            android:textColor="#FF0000"
            android:padding="16dp"
            android:background="#FFF3E0"
            android:layout_marginTop="16dp"/>

    </LinearLayout>

</ScrollView>
