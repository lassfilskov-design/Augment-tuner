<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-material"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <TextView
            android:text="âš™ï¸ SETTINGS"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"/>

        <!-- Appearance -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:text="ðŸŽ¨ APPEARANCE"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <!-- Dark Mode -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:text="Dark Mode"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                        <TextView
                            android:text="Enable dark theme"
                            android:textSize="12sp"
                            android:alpha="0.6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <com.google.android.material.switchmaterial.SwitchMaterial
                        android:id="@+id/switchDarkMode"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>

                <!-- Speed Unit -->
                <TextView
                    android:text="Speed Unit"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chipGroupSpeedUnit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipKmh"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="km/h"
                        android:checked="true"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipMph"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mph"
                        style="@style/Widget.MaterialComponents.Chip.Choice"/>
                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Privacy -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:text="ðŸ” PRIVACY"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <!-- No Telemetry Info -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="#00AA0020"
                    android:padding="12dp">

                    <TextView
                        android:text="âœ…"
                        android:textSize="24sp"
                        android:layout_marginEnd="12dp"/>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:text="NO TELEMETRY"
                            android:textSize="14sp"
                            android:textStyle="bold"
                            android:textColor="#00AA00"/>

                        <TextView
                            android:text="This app has NO INTERNET permission. All data stays on your device."
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Data Management -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:text="ðŸ’¾ DATA MANAGEMENT"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <!-- Clear Ride History -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnClearRideHistory"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Clear Ride History"
                    android:textColor="#FF0000"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="#FF0000"
                    app:cornerRadius="8dp"
                    android:layout_marginBottom="8dp"/>

                <!-- Export Data -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnExportData"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Export Ride Data (JSON)"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:cornerRadius="8dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- About -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:text="â„¹ï¸ ABOUT"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"/>

                <!-- App Version -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:text="App Version:"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:id="@+id/tvAppVersion"
                        android:text="1.0.0"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"/>
                </LinearLayout>

                <!-- Privacy Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:text="Internet Permission:"
                        android:textSize="14sp"
                        android:layout_width="0dp"
                        android:layout_weight="1"/>

                    <TextView
                        android:text="DISABLED âœ…"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#00AA00"
                        android:layout_width="wrap_content"/>
                </LinearLayout>

                <!-- Developer Info -->
                <TextView
                    android:text="Built for Augment scooters\nReverse engineered BLE protocol\nâš ï¸ Use at your own risk!"
                    android:textSize="12sp"
                    android:alpha="0.6"
                    android:layout_marginTop="8dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Danger Zone -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardElevation="4dp"
            app:cardCornerRadius="12dp"
            app:strokeColor="#FF0000"
            app:strokeWidth="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:text="âš ï¸ DANGER ZONE"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="#FF0000"
                    android:layout_marginBottom="12dp"/>

                <!-- Reset All Settings -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnResetAllSettings"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Reset All Settings & Data"
                    android:textColor="#FF0000"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    app:strokeColor="#FF0000"
                    app:cornerRadius="8dp"/>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</ScrollView>
